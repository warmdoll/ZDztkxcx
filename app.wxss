/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
div,input,span,a{box-sizing: border-box;-moz-box-sizing:border-box; /* Firefox */-webkit-box-sizing:border-box; /* Safari */}
ul,li{list-style-type:none;}
a{text-decoration:none;}
.fl{float: left;}
.rt{float: right;}
.tc{text-align: center;}
.clearfix:after{visibility:hidden;display:block; font-size:0; content:'\20'; clear:both; height:0;}

.ver-middle{position: absolute; bottom: 50%;left: 50%;transform: translate(-50%, -50%);}
.ft15{font-size:1.5rem;}

.over-circle{display:inline-block;padding:0.1rem;overflow: hidden;text-overflow: ellipsis;    white-space: nowrap;vertical-align: middle;}
.overtwo-circle{display: -webkit-box;overflow: hidden;word-break: break-all;-webkit-line-clamp: 2; -webkit-box-orient: vertical;}
.flex-box{display: flex;display: -webkit-flex;}
.betweenplace{ 
    /*display:-webkit-box;
    display:-moz-box;
    display:box; 
    display:-webkit-flex;
    display:flex;*/
    display: -webkit-box;
    display: -moz-box; 
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    
    -webkit-box-pack:justify;
    -webkit-box-pack: space-between;
    -moz-justify-content: space-between;
    -webkit-justify-content: space-between;
    justify-content:space-between;   
}
.commonico{position: relative;}
.commonico:after,.commonico:before{position: absolute;content:'';background-image: url("http://wap2.wangxiao.cn/ztkxcx/images/icon1.png");background-repeat: no-repeat;background-size: 1500rpx 750rpx;}
.box-shadow{
  box-shadow: 4rpx 4rpx 20rpx #ccc;
}
